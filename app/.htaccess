<IfModule authz_core_module>
	Options -MultiViews
    RewriteEngine On

    # Redirigir todo menos los archivos y directorios reales
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
<IfModule !authz_core_module>
	Deny from all
</IfModule>
